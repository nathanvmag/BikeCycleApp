<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:barrierAllowsGoneWidgets="true">

    <com.beardedhen.androidbootstrap.BootstrapWell
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:animateLayoutChanges="false"
        android:animationCache="true"
        app:bootstrapSize="xl">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/saiuent"
                android:layout_width="135dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="111dp"
                android:layout_marginStart="14dp"
                android:text="Chegou entregador"
                app:bootstrapBrand="warning"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:roundedCorners="true"
                app:showOutline="false" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/finalizaped"
                android:layout_width="135dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/saiuent"
                android:layout_marginEnd="13dp"
                android:text="Finalizar pedido"
                app:bootstrapBrand="success"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:roundedCorners="true"
                app:showOutline="false" />

            <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                android:id="@+id/infofoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:bootstrapBrand="success"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/infotel"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/infofoto"
                android:layout_alignEnd="@+id/horaini"
                android:layout_alignParentTop="false"
                android:text="------------------"
                android:textSize="18sp"
                android:textStyle="bold"
                app:bootstrapBrand="warning" />

            <TextView
                android:id="@+id/infodata"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="125dp"
                android:text="Data :24/10/2019"
                android:textSize="18sp" />

            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/infoname"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idview"
                android:layout_toEndOf="@+id/saiuent"
                android:gravity="center"
                android:text="Sem entregador"
                android:textSize="20sp"
                android:textStyle="bold"
                app:bootstrapBrand="success" />

            <TextView
                android:id="@+id/horaini"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="191dp"
                android:text="Pedido finalizado às: --:--"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/infostatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="216dp"
                android:text="aguarando entregadr"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/horater2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="159dp"
                android:text="Pedido iniciado às: 20:10"
                android:textSize="18sp" />

            <com.beardedhen.androidbootstrap.BootstrapProgressBar
                android:id="@+id/progbar2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="189dp"
                app:animated="false"
                app:bootstrapBrand="warning"
                app:bootstrapMaxProgress="4"
                app:bootstrapProgress="1"
                app:bootstrapshowPercentage="false"
                app:roundedCorners="true"
                app:striped="true" />

            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/dimissinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:text="Fechar"
                android:textSize="18sp"
                android:textStyle="bold"
                app:bootstrapBrand="success" />

            <TextView
                android:id="@+id/idview"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/finalizaped"
                android:layout_alignParentTop="true"
                android:text="#id" />


        </RelativeLayout>
    </com.beardedhen.androidbootstrap.BootstrapWell>


</RelativeLayout>