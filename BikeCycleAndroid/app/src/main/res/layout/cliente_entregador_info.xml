<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo5"
    app:barrierAllowsGoneWidgets="true">

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/infclientefinal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_alignStart="@+id/infodata"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="10dp"
        android:text="Informações Cliente Final"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false" />

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:id="@+id/infofoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="26dp"
        app:bootstrapBrand="success"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:id="@+id/infotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView5"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/imageView5"
        android:gravity="bottom|center"
        android:text="------------------"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:bootstrapBrand="info"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/infodata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/infofoto"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Data :24/10/2019"
        android:textColor="#9a864b"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:id="@+id/infoname"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/infofoto"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/infofoto"
        android:gravity="center"
        android:text="Sem entregador"
        android:textSize="20sp"
        android:textStyle="bold"
        app:bootstrapBrand="regular" />

    <TextView
        android:id="@+id/horaini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/horater2"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Pedido finalizado às: --:--"
        android:textColor="#9a864b"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/infostatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/horaini"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="aguarando entregadr"
        android:textColor="@color/bootstrap_gray"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/horater2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/infodata"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Pedido iniciado às: 20:10"
        android:textColor="#9a864b"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.beardedhen.androidbootstrap.BootstrapProgressBar
        android:id="@+id/progbar2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/infostatus"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        app:animated="false"
        app:bootstrapBrand="warning"
        app:bootstrapMaxProgress="4"
        app:bootstrapProgress="1"
        app:bootstrapshowPercentage="false"
        app:roundedCorners="true"
        app:striped="false" />

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:id="@+id/dimissinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infclientefinal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Fechar"
        android:textSize="18sp"
        android:textStyle="bold"
        app:bootstrapBrand="danger" />

    <TextView
        android:id="@+id/idview"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="end"
        android:text="#id"
        android:textColor="@color/bootstrap_brand_info" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/progbar2"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/saiuent"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/infodata"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="10dp"
            android:text="Chegou entregador"
            app:bootstrapBrand="warning"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/finalizaped"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Finalizar pedido"
            app:bootstrapBrand="success"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/infoname"
        android:layout_alignStart="@+id/infoname"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/tele" />


</RelativeLayout>