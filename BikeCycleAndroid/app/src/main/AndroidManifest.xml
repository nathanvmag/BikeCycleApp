<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bikecycle.com.bikecycle">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"

        android:theme="@style/AppTheme">
        <activity android:name=".loginPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".esquepass"
            android:label="@string/title_activity_esquepass"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".entregadorLayot"
            android:label="@string/title_activity_entregador_layot"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".EntregadorLayout"
            android:label="@string/title_activity_entregador_layout" />
        <activity android:name=".altersenha" />
        <activity
            android:name=".ClienteLayout"
            android:label="@string/title_activity_cliente_layout"></activity>
    </application>

</manifest>